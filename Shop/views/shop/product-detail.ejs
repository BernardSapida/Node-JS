<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./../includes/head.ejs') %>
</head>
<body>
    <%- include('./../includes/navigation.ejs') %>
    <main>
        <section class="container my-5">
            <h1 class="text-center">Product Detail</h1>
            <hr>
            <article class="mx-auto px-0" style="width: 30rem;">
                <img src="<%= product.image %>" class="card-img-top" style="width: 100%;" alt="image Book">
                <div class="mt-3">
                    <div class="d-flex align-items-center justify-content-between my-2">
                        <h5 class="card-title m-0"><%= product.title %></h5>
                        <p class="badge text-primary fs-5 m-0">$<%= product.price %></p>
                    </div>
                    <p class="card-text"><%= product.description %></p>
                        <%- include('./../includes/add-to-cart.ejs', { product: product}) %>
                </div>
            </article>
        </section>
    </main>
    <%- include('./../includes/footerPackeges.ejs') %>
</body>
</html>