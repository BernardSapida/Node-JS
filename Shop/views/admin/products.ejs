<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./../includes/head.ejs') %>
</head>
<body>
    <%- include('./../includes/navigation.ejs') %>
    <main>
        <section class="container my-5">
            <h1>My Products</h1>
            <p>List of all products...</p>
            <% if(productsList.length > 0) { %>
                <div class="row gap-3">
                    <% for(product of productsList) { %>
                        <div class="card px-0" style="width: 18rem;">
                            <img src="/<%= product.image %>" class="card-img-top" style="height: 150px;" alt="image Book">
                            <div class="card-body">
                                <div class="d-flex align-items-center justify-content-between">
                                    <h5 class="card-title m-0"><%= product.title %></h5>
                                    <p class="badge text-primary fs-5 m-0">$<%= product.price %></p>
                                </div>
                                <p class="card-text"><%= product.description.slice(0,122) %>...</p>
                                <a href="edit-product/<%= product._id %>?edit=true" class="w-100 ms-auto btn btn-outline-dark">Edit</a>
                                <form action="delete-product" method="POST">
                                    <input type="hidden" class="form-control" id="id" name="id" value="<%= product._id %>">
                                    <input type="hidden" name="csrfToken" value="<%= csrfToken %>">
                                    <button type="submit" class="w-100 ms-auto btn btn-outline-danger mt-2">Delete</button>
                                </form>
                            </div>
                        </div>
                    <% } %>
                </div>
            <% } else { %>
                <p class="text-center text-secondary">No Products Found!</p>
            <% } %>
        </section>
    </main>
    <%- include('./../includes/bootstrapBundle.ejs') %>
</body>
</html>